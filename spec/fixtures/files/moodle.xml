    </incorrectfeedback>
    <subquestion format="html">
      <text><![CDATA[<p>Digoxin</p>]]></text>
      <answer>
        <text>Monitor for bradycardia and dysrhythmias</text>
      </answer>
    </subquestion>
    <subquestion format="html">
      <text><![CDATA[<p>Furosemide</p>]]></text>
      <answer>
        <text>Monitor for electrolyte imbalances and dehydration</text>
      </answer>
    </subquestion>
    <subquestion format="html">
      <text><![CDATA[<p>Warfarin</p>]]></text>
      <answer>
        <text>Monitor for bleeding and check INR levels</text>
      </answer>
    </subquestion>
    <subquestion format="html">
      <text><![CDATA[<p>Metformin</p>]]></text>
      <answer>
        <text>Monitor for lactic acidosis and check renal function</text>
      </answer>
    </subquestion>
    <subquestion format="html">
      <text><![CDATA[<p>Levothyroxine</p>]]></text>
      <answer>
        <text>Monitor for signs of hyperthyroidism and check TSH levels</text>
      </answer>
    </subquestion>
  </question>
