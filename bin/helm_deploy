#!/bin/bash

if [ -z "$1" ] || [ -z "$2" ]
then
    echo './bin/helm_deploy RELEASE_NAME NAMESPACE'
    exit 1
fi
release_name="${1}"
namespace="${2}"

DEPLOY_IMAGE="${DEPLOY_IMAGE:-ghcr.io/scientist-softserv/viva}"
DEPLOY_TAG="${DEPLOY_TAG:-latest}"

helm upgrade \
    --install \
    --atomic \
    --timeout 15m0s \
    --set image.repository="$DEPLOY_IMAGE" \
    --set image.tag="$DEPLOY_TAG" \
    $HELM_EXTRA_ARGS \
    --values 'ops/staging-deploy.tmpl.yaml' \
    --namespace="$namespace" \
    --create-namespace \
    --dry-run \
    --debug \
    "$release_name" \
    chart
