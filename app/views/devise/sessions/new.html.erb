<main class='container d-flex justify-content-center align-items-center vh-100'>
  <div class='row justify-content-center'>
    <figure class='logo mt-5 mt-md-0'>
      <%= image_tag('logo.png',
        alt: 'Viva Logo',
        class: 'img w-75 mx-auto d-block',
        data: { title: 'Viva Logo' })
      %>
    </figure>
  <div class='row justify-content-center'>
    <div class = 'col-12 order-2 order-sm-1 col-sm-6 p-5 d-flex flex-column'>
      <h2>About Us</h2>
      <p>Text about the project here. Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry</p>
      <p>Another line of important Text about the project here. Lorem Ipsum is simply dummy text of the printing and typesetting industry. This is example text and will need to be filled in with real copy.</p>
      <p>Please contact <a href='mailto:admin@example.com'>our team</a> to request access.</p>
        <button href='/' class='btn btn-primary mx-auto'>Request Access</button>
    </div>
    <div class='col-12 col-sm-6 p-5 order-1 order-sm-2 bg-light rounded d-flex flex-column justify-content-between align-items-center'>
      <h2 class='align-self-start'>Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'w-100' }) do |f| %>
        <div class='field mt-3'>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email', class: 'bg-secondary-subtle rounded border-0 w-100 p-2' %>
        </div>
        <div class='field mt-3'>
          <%= f.password_field :password, autocomplete: 'current-password', placeholder: 'Password', class: 'bg-secondary-subtle rounded border-0 w-100 p-2' %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class='field mt-3'>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class='actions mt-3'>
          <%= f.submit 'Log in', class: 'btn btn-primary mx-auto d-block' %>
        </div>
      <% end %>
      <div class='d-flex flex-column flex-md-row w-100 text-center justify-content-md-around mt-3'>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</main>